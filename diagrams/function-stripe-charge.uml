@startuml
(*)
:stripe.key = "private key";

if (stripe_customer_id?) then (False)
    :stripe.Customer.create;
endif
:customer_id;

if (recurring charge?) then (True)
    if(plan_exists?) then (False)
        :stripe.Plan.create;
    endif
    :stripe.Subscription.create;
else
    :stripe.Charge.create;
endif

@enduml

